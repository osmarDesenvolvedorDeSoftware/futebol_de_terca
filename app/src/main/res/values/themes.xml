<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema Principal do App -->
    <style name="Theme.Futebol_de_terca" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#008000</item> <!-- Verde escuro -->
        <item name="colorAccent">#4CAF50</item> <!-- Verde claro -->
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/gray_dark</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema para a Splash Screen -->
    <style name="Theme.Futebol_de_terca.Launcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>
